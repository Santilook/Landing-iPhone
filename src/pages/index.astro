---
import Layout from "../layouts/Layout.astro";
import Iphone15 from "../assets/iphone15.webp";
import MockupIphone15 from "../assets/iphone15-4.webp";
import Iphone15_5 from "../assets/iphone15-5.webp";
import Iphone15_6 from "../assets/iphone15-6.webp";
import UsbIphone15 from "../assets/usb-c-iphone15.webp";
---

<Layout>
	<!-- Hero Section -->
	<section
		id="hero"
		class="flex flex-col items-center justify-center m-auto relative min-h-[400px] md:min-h-[600px] lg:min-h-[500px]"
	>
		<h1
			class="text-[3.6rem] mt-15 relative md:mt-0 bottom-29 md:text-[6rem] lg:mt-30 lg:text-[8rem] xl:text-[10rem] font-bold uppercase tracking-[4px] md:tracking-[8px] lg:tracking-[10px] text-[#391824] md:text-start"
		>
			iphone 15
		</h1>
		<img
			id="iphone15"
			loading="lazy"
			src={Iphone15.src}
			width="350"
  			height="600"
			alt="Iphone 15"
			fetchpriority="high"
			class="absolute left-1/2 -translate-x-1/2 bottom-[0px] md:bottom-[-80px] lg:bottom-[-140px] h-[300px] md:h-[500px] lg:h-[450px] lg:w-[-200px] xl:h-[600px] xl:w-[350px] xl:bottom-[-300px] w-auto mask-b-from-80% mask-b-to-100%"
		/>
	</section>
	<!-- Carousel Logo -->
	<h2
		class="text-[#391824] text-xl md:text-2xl font-bold text-center uppercase mt-40 md:mt-80 lg:mt-100"
	>
		Con la confianza de las marcas que conoces
	</h2>
	<div
		id="carusel-logo"
		class="flex items-center w-full gap-6 px-2 mt-10 overflow-hidden md:mt-20 md:gap-10 md:px-10"
	>
		<div
			class="animate-scroll-left flex items-center gap-6 md:gap-10 min-w-max"
		>
			
			<img
				src="/src/assets/microsoft.svg"
				alt="Logo Microsoft"
				width="80"
				height="80"
				loading="lazy"
				class="lg:h-40 lg:w-40"
			/>
			<img
				src="/src/assets/reddit.svg"
				alt="Logo Reddit"
				width="64"
				height="32"
				loading="lazy"
				class="lg:h-32 lg:w-32"
			/>
			<img
				src="/src/assets/adobe.svg"
				alt="Logo Adobe"
				width="80"
				height="32"
				loading="lazy"
				class="lg:h-32 lg:w-32"
			/>
			<img
				src="/src/assets/airbnb.svg"
				alt="Logo Airbnb"
				width="80"
				height="40"
				loading="lazy"
				class="lg:h-40 lg:w-40"
			/>
			<img
				src="/src/assets/stripe.svg"
				alt="Logo Stripe"
				width="80"
				height="32"
				loading="lazy"
				class="lg:h-32 lg:w-32"
			/>
			<!-- Duplicados para efecto infinito -->
			<img
				src="/src/assets/microsoft.svg"
				alt="Logo Microsoft"
				width="80"
				height="80"
				loading="lazy"
				class="lg:h-40 lg:w-40"
			/>
			<img
				src="/src/assets/reddit.svg"
				alt="Logo Reddit"
				width="64"
				height="32"
				loading="lazy"
				class="lg:h-32 lg:w-32"
			/>
			<img
				src="/src/assets/adobe.svg"
				alt="Logo Adobe"
				width="80"
				height="32"
				loading="lazy"
				class="lg:h-32 lg:w-32"
			/>
			<img
				src="/src/assets/airbnb.svg"
				alt="Logo Airbnb"
				width="80"
				height="40"
				loading="lazy"
				class="lg:h-40 lg:w-40"
			/>
			<img
				src="/src/assets/stripe.svg"
