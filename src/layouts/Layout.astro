<style is:global>
	@import "tailwindcss";
	html,
	body {
		background: #e4b7c1;
		margin: 0;
		width: 100%;
		height: 100%;
}

	.animate-scroll-left {
    animation: scroll-left 50s linear infinite;
}

	@keyframes scroll-left {
    0% {
    	transform: translateX(0);
    }
    100% {
    	transform: translateX(-30%);
    }
}
</style>
