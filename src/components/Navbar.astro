---

<nav
    class="bg-[#391824] rounded-xl px-4 md:px-6 py-3 flex flex-col md:flex-row items-center w-full md:w-9/10 mt-3 mx-auto shadow-lg"
>
    <div class="flex w-full justify-between items-center">
        <span id="logo" class="text-2xl font-bold text-white mr-0 md:mr-8"
            >Iphone</span
        >
        <button
            class="md:hidden text-white text-3xl focus:outline-none"
            id="menu-toggle"
        >
            &#9776;
        </button>
    </div>
    <div
        id="menu"
        class="w-full md:flex md:items-center md:justify-center hidden md:block lg:ml-200"
    >
        <ul
            class="flex flex-col md:flex-row items-center gap-4 md:gap-8 text-gray-300 font-medium mt-4 md:mt-0"
        >
            <li class="relative group w-full md:w-auto">
                <button
                    class="flex items-center gap-1 focus:outline-none cursor-pointer w-full md:w-auto justify-center md:justify-start"
                >
                    Productos
                    <svg
                        class="w-4 h-4 ml-1"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        viewBox="0 0 24 24"
                        ><path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            d="M19 9l-7 7-7-7"></path></svg
                    >
                </button>
            </li>
            <li class="w-full md:w-auto">
                <a
                    href="#asd"
                    class="hover:text-white block text-center md:text-left"
                    >Nosotros</a
                >
            </li>
            <li class="w-full md:w-auto">
                <a
                    href="#"
                    class="hover:text-white block text-center md:text-left"
                    >Contacto</a
                >
            </li>
        </ul>
        <a
            href="#"
            class="bg-[#d2636c] text-white font-semibold px-6 py-2 rounded-lg shadow hover:bg-[#c94c55] transition mt-4 md:mt-0 ml-0 md:ml-8 block text-center md:inline-block w-full md:w-auto"
            >Login</a
        >
    </div>
</nav>
<script>
    if (typeof window !== "undefined") {
        const menuToggle = document.getElementById("menu-toggle");
        const menu = document.getElementById("menu");
        if (menuToggle && menu) {
            menuToggle.addEventListener("click", () => {
                menu.classList.toggle("hidden");
            });
        }
    }
</script>
