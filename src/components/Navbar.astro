<nav aria-label="Menú principal"
    class="fixed z-50 bg-[#391824] rounded-xl px-4 md:px-6 py-3 flex flex-col md:flex-row items-center w-full md:w-9/10 md:ml-11 mt-3 mx-auto shadow-lg lg:ml-15 lg:py-4 xl:ml-23"
>
    <div class="flex w-full justify-between items-center lg:mr-[-220px]">
        <a id="logo" href="/" class="text-2xl font-bold text-white mr-0 md:mr-8"
            >Iphone</a
        >
        <a
            class="md:hidden text-white text-3xl focus:outline-none"
            id="menu-toggle"
        >
            &#9776;
        </a>
    </div>
    <div
        id="menu"
        class="w-full md:flex md:items-center md:justify-center lg:flex hidden md:block lg:w-auto xl:w-auto"
    >
        <ul
            class="flex flex-col md:flex-row items-center gap-4 md:gap-8 text-gray-300 font-medium mt-4 md:mt-0"
        >
            <li class="relative group w-full md:w-auto">
                <a
                    class="hover:text-white block text-center md:text-left cursor-pointer"
                    >Productos</a
                >
            </li>
            <li class="w-full md:w-auto">
                <a
                    aria-label="Ir a características del producto"
                    href="#features"
                    class="hover:text-white block text-center md:text-left"
                    >Características</a
                >
            </li>
            <li class="w-full md:w-auto">
                <a  
                    aria-label="Ir a comentarios de clientes"
                    href="#comentarios"
                    class="hover:text-white block text-center md:text-left"
                    >Comentarios</a
                >
            </li>
        </ul>
        <a 
            aria-label="Iniciar sesión en tu cuenta"
            class="bg-[#A52A2A] text-white font-semibold px-6 py-2 rounded-lg shadow hover:bg-[#AF1333] transition mt-4 md:mt-0 ml-0 md:ml-8 block text-center md:inline-block w-full md:w-auto cursor-pointer"
            >Login</a
        >
    </div>
</nav>
<script>
    if (typeof window !== "undefined") {
        const menuToggle = document.getElementById("menu-toggle");
        const menu = document.getElementById("menu");
        if (menuToggle && menu) {
            menuToggle.addEventListener("click", () => {
                menu.classList.toggle("hidden");
            });
        }
    }
</script>
